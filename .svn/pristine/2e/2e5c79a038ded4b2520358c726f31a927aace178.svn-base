  <script>
      $(function () {
    // 循环所有订单
    var sy = ['全部订单', '待支付', '待收货','待评论','已完成','售后订单']
    $.each(sy, function(index, item) {
       var mm = $('<span>'+item+'</span>')
       $('.indent').append(mm)
    })
    // 循环是否确定收货
    var enter = [
        {aa:'LOCK FOREVER系列 心·锁唯一', bb:'钻石重量(ct):50 钻石颜色(color):G',cc:'白18K金',dd:'￥134996', yy:[{ee:'待收货',ff:'确定收货'}]},
        {aa:'LOCK FOREVER系列 心·锁唯一', bb:'钻石重量(ct):50 钻石颜色(color):G',cc:'白18K金',dd:'￥134996', yy:[{ee:'待收货',ff:'确定收货'}]},
        {aa:'LOCK FOREVER系列 心·锁唯一', bb:'钻石重量(ct):50 钻石颜色(color):G',cc:'白18K金',dd:'￥134996', yy:[{ee:'待收货',ff:'确定收货'}]},
        {aa:'LOCK FOREVER系列 心·锁唯一', bb:'钻石重量(ct):50 钻石颜色(color):G',cc:'白18K金',dd:'￥134996', yy:[{ee:'待收货',ff:'确定收货'}]}
    ]
    $.each(enter, function(index1,item1){
        var ll = $('<div class="left_td"><img src="../png/mycenter_img6.png"><div class=text_a><p> <b>'+item1.aa+'</b></p><p>'+item1.bb+'</p><p>'+item1.cc+'</p><p>'+item1.dd+'</p></div></div>')
        $('.Atr').append(ll)
        $.each(item1.yy , function(index2,item2) {
            var uu = $('<p>'+item2.ee+'</p><p> <a>'+item2.ff+'</a></p>')
            $('.right_td').append(uu)
        })
    })
     // 第几页的循环
     var yeshu = ['上一页','1','2','3','4','...','5','6','下一页', '确定']
    $.each(yeshu, function (index1,item1) {
      var shu = $('<a>'+ item1+'</a>')
      $('.yeshua').append(shu)
    })
    $('a:last').before('<div><input type="text"></div>')
    // 页数的高亮 
    $('.yeshua a:eq(1)').addClass('daa')
    $('.yeshua a').click(function() {
      $('.yeshua a').removeClass('daa')
      $(this).addClass('daa')
      $('.yeshua a:eq(0),.yeshua a:eq(5),.yeshua a:eq(8),.yeshua a:eq(9)').removeClass('daa')
    })
    
    })
  </script>
