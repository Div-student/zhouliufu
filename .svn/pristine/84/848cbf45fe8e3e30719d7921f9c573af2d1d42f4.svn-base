*{
    margin: 0;
    padding: 0;
}
.top_text{
    position: absolute;
    top: 300px;
    left: 50%;
    margin-left: -256px;
    text-align: center;
}
.top_text>div{
    color: white;
    font-family: 微软雅黑;
}
.top_text>div:nth-child(1){
    color: #00FFEA;
    font-size: 55px;
}
.top_text>div:nth-child(2){
    height: 8px;
    background: #00FFEA;
    width: 50px;
    display: inline-block;
}
.top_text>div:nth-child(3){
    font-size: 50px;
    margin: 10px 0;
}
.top_text>div:nth-child(4){
    font-size: 25px;
}
.top_text>div:nth-child(5){
    margin: 350px 0 40px;
}
.main{
    margin: 0 auto;
    width: 1200px;
    text-align: center;
}
.main>div:nth-child(1){
    font-size: 38px;
    margin-top: 70px;
}
.main>div:nth-child(1)>div{
    display: inline-block;
    background: black;
    height: 5px;
    width: 70px;
    margin: 0 40px;
}
.main>div:nth-child(2){
    font-size: 15px;
    margin-top: 10px;
}
.main>div:nth-child(3){
    margin: 80px 0;
}
.hhh>div{
    height: 57px;
    display: inline-block;
    font-size: 23px;
    line-height: 57px;
    color: white;
    margin-bottom: 30px;
}
.hhh>div:first-child{
    width: 144px;
    background-image: url("../png/1.png");
}
.hhh>div:last-child{
    width: 600px;
    background-image: url("../png/2.png");
    text-align: left;
    padding-left: 25px;
}
.sss_box{
    margin-top: 100px;
}
.sss{
    display: inline-block;
    margin: 0 115px;
}
.sss:first-child{
    position: relative;
    bottom: 60px;
}
.sss>div:first-child{
    width: 238px;
    height: 252px;
    background-image: url("../png/3.png");
    z-index: 1;
}
.sss>div:first-child>div:first-child{
    font-size: 26px;
    color: white;
    line-height: 90px;
}
.sss>div:first-child>div:last-child{
    font-size: 13px;
    color: white;
}
.sss>div:last-child{
    width: 202px;
    height: 268px;
    background-image: url("../png/4.png");
    position: relative;
    bottom: 30px;
    z-index: -1;
    font-size: 18px;
    color: white;
    line-height: 30px;
    padding: 40px 18px 0 18px;
    text-align: left;
}
.big{
    position: absolute;
    top: 250%;
    left: -100px;
}
.small{
    position: absolute;
    top: 340%;
    right: 20px;
}