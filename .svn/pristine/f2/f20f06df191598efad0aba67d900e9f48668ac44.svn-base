$(function () {
    $('.pinganpic').css({position:'relative',height:'581px',backgroundSize:'cover',backgroundImage:"url('../img/bodybg.png')"})
    $('.main_section').css({marginBottom:'170px'})
    $('.main_section>p').css({fontSize:'19px',textAlign:'center',
        margin:'30px 0 50px'})
    $('.main_section>.pic_title').css({margin:'0 auto',textAlign:'center'})
    $('.pinganpic_title>ul').css({width:'1160px',margin:'30px auto',color:'#00ffea',
        listStyle:'none',display:'flex',padding:'40px 0'})
    $('.pinganpic_title>ul>li').css({flex:'1',textAlign:'center',
        fontSize:'18px',fontFamily:'微软雅黑'})
    $('.pinganpic_fixed').css({position:'absolute',width:'260px',height:'70px',
        background:'rgba(0,17,33,.5)',color:'#fff',fontSize:'36px',top:'50%',marginTop:'-35px',
        left:'50%', marginLeft:'-130px',textAlign:'center',lineHeight:'70px'})
    $('.pinganpic_footer').css({width:'1110px',height:'160px',background:'rgba(0,17,33,.5)',
        color:'#00ffea',fontSize:'18px',fontFamily:'微软雅黑',position:'relative',
        margin:'270px auto',textAlign:'center'})
    $('.pinganpic_footer>ul').css({padding:'20px',listStyle:'none'})
    $('.pinganpic_footer>ul>li').css({display:'inline-block',listStyle:'none',margin:'8px'})

    //企业的信息

    $('.box').css({display:'flex',color:'white',width:'1000px',height:'120px',
        alignItems:'center',background:'#1cc1c7',margin:'30px auto'})
    $('.box>span:nth-child(odd)').css({fontSize:'37px',display:'inline-block',margin:'36px 50px'})
    $('.box>span:nth-child(even)').css({display:'inline-block',width:'550px',fontSize:'18px',fontWeight:'bold',
        marginLeft:'20px'})
    $('.main_section_achievement>span:nth-child(even)').css({width:'670px'})
    //市场定位 框里的刚刚
    $('.main_section_market').each(function () {
        $(this).append('<div class="bb"></div class="gg"><div></div>')
    }).css({position:'relative'})
    //$('.bb').css({width:'180px',height:'3px',background:'#fff',position:'absolute',right:'0',top:'80px'})
    $('.gg').css({width:'90px',height:'3px',background:'red',position:'absolute',top:'100px'})

})

