.footer{
  width: 100%;
  height: 355px;
  background-color: #434343;
}
.footer_content{
  width: 1100px;
  height: inherit;
  margin: 0 auto;
}
.footer_content ul{
  display: inline-block;
  vertical-align: top;
  margin: 40px 40px 0;
}
.footer_content ul:last-child{
  width: 320px
}
.footer_content li{
  list-style: none;
  color: white;
  margin-bottom: 28px;
  cursor: pointer;
}
.footer_content li:first-child{
  font-weight: bolder
}
.footer_content li>img{
  vertical-align: middle
}
.lianxi span:last-child{
  display: inline-block;
  width: 260px;
  margin-left: 10px;
}
.lianxi span:first-child{
  display: inline-block;
  width: 35px;
  height: 35px;
  text-align: center
}
