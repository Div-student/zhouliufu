*{
    margin: 0;
}
.header_menu>ul>li:hover{
    color:#dab866;
}
.nofloat:after{
    content: '';
    display: block;
    clear: both;
    visibility: hidden;
    height: 0px;
}
.header_pic>img{
    width:100%;
    height:313px;
}
.header_top_right>span {
    position: relative;
}
.header_top_right>span:last-child {
    color: #dab866;
}
.header_top_right>span>img {
    position: relative;
    vertical-align: middle;
    top:-2px
}

.header_pic {
    position: relative;
}
.header_pic>div{
    display: block;
    position: absolute;
    width:90px;
    left: 50%;
    margin-left: -45px;
    bottom: 10px;
}
/*切换按钮*/
.header_pic>div>span {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background:lightgrey;
    margin: 10px;
}
.header_title_right {
    position: relative;
}
.header_title_right > input {
    font-size: 14px;
    padding-left: 10px;
    color: red;
}
.header_title_right > img {
    position: absolute;
    top:36px;
    right:10px
}




